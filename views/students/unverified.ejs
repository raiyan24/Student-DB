<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Student</title>
</head>
<body>
    
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <a href="/student" class="btn btn-sm btn-primary">Back</a><br><br>
                <div class="card shadow">
                    <div class="card-body">
                        <h2>Unverified Students</h2>
                        <hr>
                        <table class="table table-striped table-Secondary student_table soro_data_table">
                            <thead>
                                <tr class="align-middle">
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Cell</th>
                                    <th>Location</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% student.forEach( (student, index) => { %>
                                    <tr class="align-middle">
                                        <td><%= index + 1 %> </td>
                                        <td><%= student.name %> </td>
                                        <td><%= student.email %> </td>
                                        <td><%= student.cell %> </td>
                                        <td><%= student.location %> </td>
                                        <td>
                                            <% if ( student.photo == 'avatar.png') { %>
                                                <img src="/images/<%= student.photo %> " alt="">
                                            <% } else { %>
                                                <img src="/images/students/<%= student.photo %> " alt="">
                                            <% } %> 
                                        </td>
                                        <td>
                                            <a href="/student/<%= student.id %> " class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                            <a href="/student/edit/<%= student.id %> " class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                            <a href="/student/delete/<%= student.id%> " class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

    
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <a href="/student/create" class="btn btn-sm btn-primary">Add New Student</a>
                <a href="/student/unverified" class="btn btn-sm btn-danger">Unverified Students</a><br><br>
                <div class="card shadow">
                    <div class="card-body">
                        <h2>All Students</h2>
                        <hr>
                        <table class="table table-striped table-Secondary student_table soro_data_table">
                            <thead>
                                <tr class="align-middle">
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Cell</th>
                                    <th>Location</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% student.forEach( (student, index) => { %>
                                    <tr class="align-middle">
                                        <td><%= index + 1 %> </td>
                                        <td><%= student.name %> </td>
                                        <td><%= student.email %> </td>
                                        <td><%= student.cell %> </td>
                                        <td><%= student.location %> </td>
                                        <td>
                                            <% if ( student.photo == 'avatar.png') { %>
                                                <img src="/images/<%= student.photo %> " alt="">
                                            <% } else { %>
                                                <img src="/images/students/<%= student.photo %> " alt="">
                                            <% } %> 
                                        </td>
                                        <td>
                                            <a href="/student/<%= student.id %> " class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                            <a href="/student/edit/<%= student.id %> " class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                            <a href="/student/delete/<%= student.id%> " class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                                

                            </tbody>
                        </table>
                    </div>
                </div>
                
                    <div class="col-md-3">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="user-info">
                                    <img src="http://localhost:5050/images/students/1664034861229_59465982061_IMG_20190322_110838.jpg" alt="">
                                    <h2>emran Hasan</h2>
                                    <p>0179440309</p>
                                </div>
                            </div>
                        </div>
                    </div>
                   

            </div>

            
        </div>
    </div>
